{% extends "_main.jinja" %}

{% block title%}
Articles
{% endblock %}

{% block main %}
    <h1>Articles</h1>
    {% if "logged" in session %}
        <p>
            <a href={{url_for("view_add_article")}}>Add article</a>
        </p>
    {% endif %}
    {% if articles %}
        {% for article in articles %}
        <ul>
            <li>
                <h2><a href={{url_for("view_article", art_id=article.id)}}>{{article.title}}</a></h2>
                <p>{{article.content | truncate(250)}}</p>
            </li>
        </ul>
        {% endfor %}
    {% else %}
        <p>No articles :(</p>
    {% endif %}

{% endblock %}

